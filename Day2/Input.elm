module Day2.Input exposing (rawInput, Direction(..), parsedInput)


rawInput : String
rawInput =
    """



"""


parse : String -> List (List Direction)
parse string =
    List.map parseLine (String.split "\n" string)


parseLine : String -> List Direction
parseLine =
    String.foldr parseChar []


parseChar : Char -> List Direction -> List Direction
parseChar char list =
    let
        direction =
            case char of
                'U' ->
                    Just Up

                'D' ->
                    Just Down

                'L' ->
                    Just Left

                'R' ->
                    Just Right

                _ ->
                    Nothing
    in
        case direction of
            Just dir ->
                dir :: list

            Nothing ->
                list


type Direction
    = Up
    | Down
    | Left
    | Right


parsedInput : List (List Direction)
parsedInput =
    parse rawInput
